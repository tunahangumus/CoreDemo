@model List<BlogModel>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterView.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Yazar İsmi</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @if (Model != null)
    {
        
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogID</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogCreateDate</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.BlogStatus</td>
                <td><a href="@Url.Action("DeleteBlog", "Blog", item)" class="btn btn-danger">Sil</a></td>
                <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
            </tr>
        }
    }
</table>
<a href="/Blog/BlogAdd/@ViewBag.i" class="btn btn-info">Yeni Blog Oluştur</a>
