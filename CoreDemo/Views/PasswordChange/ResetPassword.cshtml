@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<br></br>
<form asp-action="ResetPassword" method="post">
	<div class="container">
		<h3 class="tittle">Şifre Yenileme Sayfası</h3>
		<div class="row inner-sec">
			<div style="margin-left:auto;margin-right:auto;">
				<div class="login p-5 bg-light mx-auto mw-100">
					<div class="form-group">
						<input type="password" class="form-control" id="input1" asp-for="@Model.Password" placeholder="Şifre">
					</div>
					<div class="form-group">
						<input type="password" class="form-control" id="input2" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar">
					</div>
					<input class="form-control" type="submit" value="Gönder">
				</div>
			</div>
		</div>
	</div>
</form>
<br></br>

